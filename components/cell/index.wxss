.inner-container{
    height: 100%;
    padding-left: 15rpx;
    padding-right: 15rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #ffffff;
    font-size: 24rpx;
}
.inner-container>image{
    display: flex;
    width: 44rpx;
    height: 44rpx;
    margin-right: 10rpx;
}

.container{
    height: 60rpx;
    border: 2rpx solid #333333;
    padding: 2rpx;
    box-sizing: border-box;
}

.forbidden{
    border: dashed 2rpx #bbbbbb;
    color: #bbbbbb;
}

